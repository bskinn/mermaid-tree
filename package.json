{
  "name": "@bskinn/mermaid-tree",
  "version": "0.1.0",
  "description": "Generates source for a Mermaid filesystem tree flowchart",
  "main": "index.js",
  "scripts": {
    "format": "npx prettier -w .",
    "build": "run-s clean build-only",
    "clean": "node -e \"fs = require('fs'); fs.rmSync('dist', {recursive: true, force: true})\"",
    "build-only": "npx tsc",
    "check-types": "npx tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "mermaid",
    "filesystem",
    "tree",
    "flowchart"
  ],
  "author": "Brian Skinn",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "ts-node": "^10.9.1",
    "tsdef": "^0.0.14",
    "typescript": "^5.3.2"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "markdown-toc": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0"
  }
}
